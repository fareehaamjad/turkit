			<zipfileset excludes="META-INF/*.SF" src="libs/javadocking1.4.1/javadocking.jar" />
		</jar>
	</target>

	<target name="build" depends="jsdocs,javadoc,create_run_jar" description="build everything">
	</target>

</project>
