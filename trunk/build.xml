<project name="turkit" default="build" basedir=".">

	<property file="src/resources/version.properties" />
	<property name="run_jar_file" value="TurKit-${version.value}.jar" />
	<property name="output_dir" value="build" />

	<target name="jsdocs" description="build JavaScript documentation">
		<echo file="jsdoc-toolkit/templates/jsdoc/static/header.html">&lt;div id=&quot;header&quot; style=&quot;width:100%;text-align:right&quot;&gt;&lt;h3&gt;&lt;i&gt;TurKit JavaScript API v${version.value}&lt;/i&gt;&lt;/h3&gt;&lt;/div&gt;</echo>
		<exec executable="java" dir="jsdoc-toolkit">
			<arg value="-jar" />
			<arg value="jsrun.jar" />
			<arg value="app/run.js" />
			<arg value="-a" />
			<arg value="-t=templates/jsdoc" />
			<arg value="-d=../jsdocs" />
			<arg value="../src/edu/mit/csail/uid/turkit/js_libs/*.js" />
		</exec>
	</target>

	<target name="javadoc" description="build Java documentation">
		<exec executable="javadoc">
			<arg value="-d" />
			<arg value="javadocs" />
			<arg value="-sourcepath" />
			<arg value="src" />
			<arg value="-subpackages" />
			<arg value="edu" />
			<arg value="-exclude" />
			<arg value="edu.mit.csail.uid.turkit.util:edu.mit.csail.uid.turkit.gui" />
			<arg value="-header" />
			<arg value="TurKit Java API&lt;br/&gt;v${version.value}" />
		</exec>
	</target>

	<target name="create_run_jar">
		<mkdir dir="${output_dir}"/>
		<jar destfile="${output_dir}/${run_jar_file}" filesetmanifest="mergewithoutmain">
			<manifest>
				<attribute name="Built-By" value="${user.name}" />
				<attribute name="Main-Class" value="edu.mit.csail.uid.turkit.gui.Main" />
				<attribute name="Class-Path" value="." />
			</manifest>
			<fileset dir="bin" />
			<zipfileset excludes="META-INF/*.SF" src="libs/velocity-tools-1.4/velocity-tools-1.4.jar" />
			<zipfileset excludes="META-INF/*.SF" src="libs/ws-jaxme-0.5.2/jaxme2-0.5.2.jar" />
			<zipfileset excludes="META-INF/*.SF" src="libs/ws-jaxme-0.5.2/jaxme2-rt-0.5.2.jar" />
			<zipfileset excludes="META-INF/*.SF" src="libs/ws-jaxme-0.5.2/jaxmeapi-0.5.2.jar" />
			<zipfileset excludes="META-INF/*.SF" src="libs/ws-jaxme-0.5.2/jaxmejs-0.5.2.jar" />
			<zipfileset excludes="META-INF/*.SF" src="libs/ws-jaxme-0.5.2/jaxmepm-0.5.2.jar" />
			<zipfileset excludes="META-INF/*.SF" src="libs/ws-jaxme-0.5.2/jaxmexs-0.5.2.jar" />
			<zipfileset excludes="META-INF/*.SF" src="libs/wsdl4j-1.5.1/wsdl4j.jar" />
			<zipfileset excludes="META-INF/*.SF" src="libs/wstx-asl-3.2.3/wstx-asl-3.2.3.jar" />
			<zipfileset excludes="META-INF/*.SF" src="libs/xerces-2.9.1/resolver.jar" />
			<zipfileset excludes="META-INF/*.SF" src="libs/xerces-2.9.1/xercesImpl.jar" />
			<zipfileset excludes="META-INF/*.SF" src="libs/xerces-2.9.1/xml-apis.jar" />
			<zipfileset excludes="META-INF/*.SF" src="libs/apache-log4j-1.2.15/log4j-1.2.15.jar" />
			<zipfileset excludes="META-INF/*.SF" src="libs/axis-1.4/axis-ant.jar" />
			<zipfileset excludes="META-INF/*.SF" src="libs/axis-1.4/axis.jar" />
			<zipfileset excludes="META-INF/*.SF" src="libs/axis-1.4/commons-discovery-0.2.jar" />
